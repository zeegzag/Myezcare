

         
                <div class="row">
                    <div class="col-sm-12">
                        <div class="portlet-body" style="display: block;">
                            <div class="table-responsive">
                                <form id="frmReferralinterMessageList">
                                    <table class="table table-bordered table-striped table-condensed flip-content">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="EmployeeBirthdayListPager.sortColumn('Employee')">@Resource.Employee</a>
                                                    <span class="sortorder" data-ng-show="EmployeeBirthdayListPager.sortIndex === 'Employee'" data-ng-class="{reverse:EmployeeBirthdayListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a>@Resource.Phone</a>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="EmployeeBirthdayListPager.sortColumn('Birthday')">Birthday</a>
                                                    <span class="sortorder" data-ng-show="EmployeeBirthdayListPager.sortIndex === 'Birthday'" data-ng-class="{reverse:EmployeeBirthdayListPager.reverse}"></span>
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="item in EmployeeBirthdayList | itemsPerPage: EmployeeBirthdayListPager.pageSize" total-items="EmployeeBirthdayListPager.totalRecords" current-page="EmployeeBirthdayListPager.currentPage" pagination-id="EmployeeBirthdayListPagerID">
                                                <td>
                                                    <span data-ng-bind="item.EmployeeName"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind="item.Phone"></span>
                                                </td>
                                                <td>
                                                    {{item.DateOfBirth !=null ? item.DateOfBirth : "NA"}}
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                @*</div>*@
                <div class="row">
                    <div class="col-sm-12" data-ng-if="EmployeeBirthdayList.length > 0">
                        <div class="col-sm-6 pull-left no-left-padding"
                             data-ng-hide="EmployeeBirthdayListPager.currentPage==1 && (EmployeeBirthdayListPager.currentPageSize < EmployeeBirthdayListPager.pageSize)">
                            @Resource.Showing <span data-ng-bind="(EmployeeBirthdayListPager.pageSize * EmployeeBirthdayListPager.currentPage) -EmployeeBirthdayListPager.pageSize  + 1"></span>
                            &nbsp;@Resource.To <span data-ng-bind="(EmployeeBirthdayListPager.pageSize == EmployeeBirthdayListPager.currentPageSize) ? (EmployeeBirthdayListPager.pageSize * EmployeeBirthdayListPager.currentPage) :(EmployeeBirthdayListPager.pageSize * EmployeeBirthdayListPager.currentPage) - EmployeeBirthdayListPager.pageSize  + EmployeeBirthdayListPager.currentPageSize"></span>&nbsp;@Resource.Of &nbsp;<span data-ng-bind="EmployeeBirthdayListPager.totalRecords"></span>&nbsp;@Resource.Records
                        </div>
                        <div class="pull-right">
                            <dir-pagination-controls boundary-links="true" on-page-change="EmployeeBirthdayListPager.pageChanged(newPageNumber)" pagination-id="EmployeeBirthdayListPagerID"></dir-pagination-controls>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div data-ng-if="EmployeeBirthdayList.length == 0">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="alert alert-danger">
                                        @Html.Raw(Resource.NoRecordsFound)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
      
   
