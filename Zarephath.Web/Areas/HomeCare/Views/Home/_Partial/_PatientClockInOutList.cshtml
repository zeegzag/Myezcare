<div id="PatientClockInOutList" class="row">
    <div class="col-md-12">
        <div class="portlet box">
            <div class="portlet-title">
                <div class="caption header-font-size-14 uppercase">
                    Patient  - Clock In / Clock Out
                    <div class="pull-right padding-left-25" data-ng-show="EmpClockInOutListAjaxStart">
                        <img src="~/Assets/images/lazyload.gif" />
                    </div>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="fullscreen"></a>
                </div>
            </div>
        
                <div class="portlet-body table_font-size-12">
                    <div class="row">
                        <div class="col-sm-12 form-group  padding-right-15" data-ng-if="PatientClockInOutList.length > 0">
                            <div class="pull-right padding-right-5">
                                <dir-pagination-controls boundary-links="true" on-page-change="PatientClockInOutListPager.pageChanged(newPageNumber)" pagination-id="PatientClockInOutListPagerID"></dir-pagination-controls>
                            </div>
                        </div>
                    </div>

                    <form id="empClckInClckOut">
                        <div class="row form-group">
                            <div class="col-sm-3 padding-right-0">
                                <div class="fields">
                                    <label>@Resource.Patient</label>
                                    <input type="text" class="form-control input-sm" data-ng-model="PatientClockInOutListSearchModel.PatientName" placeholder="@Resource.Patient" />
                                </div>
                            </div>
                            <div class="col-sm-3 padding-right-0">
                                <div class="fields">
                                    <label>@Resource.StarDate</label>
                                    <div class="input-group date date-picker pull-right"
                                         datepicker="EmpClockInOutListSearchModel.StartDate" ng-dateval="PatientClockInOutListSearchModel.StartDate" data-val="true">
                                        <input class="form-control input-sm dateInputMask " placeholder='@Resource.StarDate' maxlength="50" />
                                        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                    </div>
                                </div>
                            </div>
                                <div class="col-sm-3 padding-right-0">
                                    <div class="fields">
                                        <label>@Resource.EndDate</label>
                                        <div class="input-group date date-picker pull-right" data-ng-maxdate="PatientClockInOutListEndDate"
                                             datepicker="PatientClockInOutListSearchModel.EndDate" ng-dateval="PatientClockInOutListSearchModel.EndDate" data-val="true">
                                            <input class="form-control input-sm dateInputMask " placeholder='@Resource.EndDate' maxlength="50" />
                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                        </div>
                                    </div>
                                </div>
                                    <div class="col-sm-1 padding-right-0">

                                        <div>
                                            <input type='submit' class="btn btn-sm btn-default bg-gray-color" value="@Resource.Search" data-ng-click="SearchPatientClockInOutList()" />
                                        </div>
                                    </div>
                                </div>
                    </form>


                    @*<div class="table-responsive">*@
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="portlet-body" style="display: block;">
                                <div class="table-responsive">
                                    <form id="frmReferralinterMessageList">
                                        <table class="table table-bordered table-striped table-condensed flip-content">
                                            <thead>
                                                <tr>
                                                    @*<th>
                                                        <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientClockInOutListPager.sortColumn('Employee')">@Resource.Employee</a>
                                                        <span class="sortorder" data-ng-show="PatientClockInOutListPager.sortIndex === 'Employee'" data-ng-class="{reverse:PatientClockInOutListPager.reverse}"></span>
                                                    </th>*@
                                                    <th>
                                                        <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientClockInOutListPager.sortColumn('Patient')">@Resource.Patient</a>
                                                        <span class="sortorder" data-ng-show="PatientClockInOutListPager.sortIndex === 'Patient'" data-ng-class="{reverse:PatientClockInOutListPager.reverse}"></span>
                                                    </th>
                                                    <th>
                                                        <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientClockInOutListPager.sortColumn('ScheduleStartTime')">Schedule StartTime</a>
                                                        <span class="sortorder" data-ng-show="PatientClockInOutListPager.sortIndex === 'ScheduleStartTime'" data-ng-class="{reverse:PatientClockInOutListPager.reverse}"></span>
                                                    </th>
                                                    <th>
                                                        <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientClockInOutListPager.sortColumn('ScheduleEndTime')">Schedule EndTime</a>
                                                        <span class="sortorder" data-ng-show="PatientClockInOutListPager.sortIndex === 'ScheduleEndTime'" data-ng-class="{reverse:PatientClockInOutListPager.reverse}"></span>
                                                    </th>
                                                    <th>
                                                        <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientClockInOutListPager.sortColumn('Attendence')">Attendence</a>
                                                        <span class="sortorder" data-ng-show="PatientClockInOutListPager.sortIndex === 'Attendence'" data-ng-class="{reverse:PatientClockInOutListPager.reverse}"></span>
                                                    </th>
                                                    <th>
                                                        <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientClockInOutListPager.sortColumn('ClockIn')">@Resource.ClockIn</a>
                                                        <span class="sortorder" data-ng-show="PatientClockInOutListPager.sortIndex === 'ClockIn'" data-ng-class="{reverse:PatientClockInOutListPager.reverse}"></span>
                                                    </th>
                                                    <th>
                                                        <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientClockInOutListPager.sortColumn('ClockOut')">@Resource.ClockOut</a>
                                                        <span class="sortorder" data-ng-show="PatientClockInOutListPager.sortIndex === 'ClockOut'" data-ng-class="{reverse:PatientClockInOutListPager.reverse}"></span>
                                                    </th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr dir-paginate="item in PatientClockInOutList | itemsPerPage: PatientClockInOutListPager.pageSize" total-items="PatientClockInOutListPager.totalRecords" current-page="PatientClockInOutListPager.currentPage" pagination-id="PatientClockInOutListPagerID">
                                                    @*<td>
                                                        <a href="@Constants.HC_AddEmployee{{item.EncryptedEmployeeID}}" target="_blank">{{item.Employee}}</a>
                                                    </td>*@
                                                    <td>
                                                        <a href="@Constants.HC_AddReferral{{item.EncryptedReferralID}}" target="_blank">{{item.Patient}}</a>
                                                    </td>
                                                    <td>
                                                        <span data-ng-bind="item.ScheduleStartTime | orgdatetime"></span>
                                                    </td>
                                                    <td>
                                                        <span data-ng-bind="item.ScheduleEndTime | orgdatetime"></span>
                                                    </td>
                                                    <td>
                                                        <span data-ng-bind="item.Attendence"></span>
                                                    </td>

                                                    <td>
                                                        <i class="glyphicon glyphicon-ok text-success" data-ng-if="item.ClockIn"></i>
                                                        <i class="glyphicon glyphicon-remove text-danger" data-ng-if="!item.ClockIn"></i>
                                                    </td>
                                                    <td>
                                                        <i class="glyphicon glyphicon-ok text-success" data-ng-if="item.ClockOut"></i>
                                                        <i class="glyphicon glyphicon-remove text-danger" data-ng-if="!item.ClockOut"></i>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                    @*</div>*@
                    <div class="row">
                        <div class="col-sm-12" data-ng-if="PatientClockInOutList.length > 0">
                            <div class="col-sm-6 pull-left no-left-padding"
                                 data-ng-hide="PatientClockInOutListPager.currentPage==1 && (PatientClockInOutListPager.currentPageSize < PatientClockInOutListPager.pageSize)">
                                @Resource.Showing <span data-ng-bind="(PatientClockInOutListPager.pageSize * PatientClockInOutListPager.currentPage) -PatientClockInOutListPager.pageSize  + 1"></span>
                                &nbsp;@Resource.To <span data-ng-bind="(PatientClockInOutListPager.pageSize == PatientClockInOutListPager.currentPageSize) ? (PatientClockInOutListPager.pageSize * PatientClockInOutListPager.currentPage) :(PatientClockInOutListPager.pageSize * PatientClockInOutListPager.currentPage) - PatientClockInOutListPager.pageSize  + PatientClockInOutListPager.currentPageSize"></span>&nbsp;@Resource.Of &nbsp;<span data-ng-bind="PatientClockInOutListPager.totalRecords"></span>&nbsp;@Resource.Records
                            </div>
                            <div class="pull-right">
                                <dir-pagination-controls boundary-links="true" on-page-change="PatientClockInOutListPager.pageChanged(newPageNumber)" pagination-id="PatientClockInOutListPagerID"></dir-pagination-controls>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12">
                            <div data-ng-if="PatientClockInOutList.length == 0">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="alert alert-danger">
                                            @Html.Raw(Resource.NoRecordsFound)
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <br class="clearfix" />
                </div>
            </div>
    </div>
</div>
