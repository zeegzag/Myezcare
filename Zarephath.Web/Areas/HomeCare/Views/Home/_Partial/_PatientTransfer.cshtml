<div id="PatientTransferList" class="row">
    <div class="col-md-12">
        <div class="portlet box">
            <div class="portlet-title">
                <div class="caption header-font-size-14 uppercase">
                    Patient - Transfer
                    <div class="pull-right padding-left-25" data-ng-show="PatientTransferListAjaxStart">
                        <img src="~/Assets/images/lazyload.gif" />
                    </div>
                </div>
                <div class="tools">
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="fullscreen"></a>
                </div>
            </div>

            <div class="portlet-body table_font-size-12">

                <div class="row form-group">
                    <div class="col-sm-4">
                        <div class="fields">
                            <label>@Resource.StarDate</label>
                            <div class="input-group date date-picker pull-right"
                                 datepicker="PatientTransferListSearchModel.StartDate" ng-dateval="PatientTransferListSearchModel.StartDate" data-val="true">
                                <input class="form-control input-sm dateInputMask " placeholder='@Resource.StarDate' maxlength="50" />
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-4">
                        <div class="fields">
                            <label>@Resource.EndDate</label>
                            <div class="input-group date date-picker pull-right"
                                 datepicker="PatientTransferListSearchModel.EndDate" ng-dateval="PatientTransferListSearchModel.EndDate" data-val="true">
                                <input class="form-control input-sm dateInputMask " placeholder='@Resource.EndDate' maxlength="50" />
                                <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-2">

                        <div>
                            <input type='submit' class="btn btn-sm btn-default bg-gray-color" value="@Resource.Search" data-ng-click="SearchPatientTransferList()" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div class="portlet-body" style="display: block;">
                            <div class="table-responsive">
                                <form id="frmReferralinterMessageList">
                                    <table class="table table-bordered table-striped table-condensed flip-content">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientTransferListPager.sortColumn('Patient')">@Resource.Patient</a>
                                                    <span class="sortorder" data-ng-show="PatientTransferListPager.sortIndex === 'Patient'" data-ng-class="{reverse:PatientTransferListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientTransferListPager.sortColumn('CreatedDate')">@Resource.CreatedDate</a>
                                                    <span class="sortorder" data-ng-show="PatientTransferListPager.sortIndex === 'CreatedDate'" data-ng-class="{reverse:PatientTransferListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="PatientTransferListPager.sortColumn('CreatedBy')">@Resource.CreatedBy</a>
                                                    <span class="sortorder" data-ng-show="PatientTransferListPager.sortIndex === 'CreatedBy'" data-ng-class="{reverse:PatientTransferListPager.reverse}"></span>
                                                </th>

                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="item in PatientTransferList | itemsPerPage: PatientTransferListPager.pageSize" total-items="PatientTransferListPager.totalRecords" current-page="PatientTransferListPager.currentPage" pagination-id="PatientTransferListPagerID">
                                                <td>
                                                    <span data-ng-bind="item.Patient"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind="item.CreatedDate| orgdatetime"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind="item.CreatedBy"></span>
                                                </td>

                                            </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12" data-ng-if="PatientTransferList.length > 0">
                        <div class="col-sm-6 pull-left no-left-padding"
                             data-ng-hide="PatientTransferListPager.currentPage==1 && (PatientTransferListPager.currentPageSize < PatientTransferListPager.pageSize)">
                            @Resource.Showing <span data-ng-bind="(PatientTransferListPager.pageSize * PatientTransferListPager.currentPage) -PatientTransferListPager.pageSize  + 1"></span>
                            &nbsp;@Resource.To <span data-ng-bind="(PatientTransferListPager.pageSize == PatientTransferListPager.currentPageSize) ? (PatientTransferListPager.pageSize * PatientTransferListPager.currentPage) :(PatientTransferListPager.pageSize * PatientTransferListPager.currentPage) - PatientTransferListPager.pageSize  + PatientTransferListPager.currentPageSize"></span>&nbsp;@Resource.Of &nbsp;<span data-ng-bind="PatientTransferListPager.totalRecords"></span>&nbsp;@Resource.Records
                        </div>
                        <div class="pull-right">
                            <dir-pagination-controls boundary-links="true" on-page-change="PatientTransferListPager.pageChanged(newPageNumber)" pagination-id="PatientTransferListPagerID"></dir-pagination-controls>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-sm-12">
                        <div data-ng-if="PatientTransferList.length == 0">
                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="alert alert-danger">
                                        @Html.Raw(Resource.NoRecordsFound)
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br class="clearfix" />
            </div>
        </div>
    </div>

</div>
