@model HC_AddReferralModel
<div id="emp-notification-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h3 class="modal-title">@Resource.SendNotification to <span><strong>{{SendSMSModel.EmployeeName}} ({{SendSMSModel.EmployeeIds}})</strong></span></h3>

            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="emp-notification">
                    <div class="form-group row">
                        <label class="col-md-4 control-label text-align-right">@Resource.EnterNotificationText:</label>
                        <div class="col-md-8">
                            <textarea class="form-control input-sm exclude-reload-alert" rows="7" placeholder="@Resource.EnterNotificationTextHere"
                                      data-ng-model="SendSMSModel.Message" maxlength="1000"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-success bg-green-jungle" data-ng-click="SendEmpNotification()">@Resource.SendNotification</a>
            </div>
        </div>

    </div>
</div>
