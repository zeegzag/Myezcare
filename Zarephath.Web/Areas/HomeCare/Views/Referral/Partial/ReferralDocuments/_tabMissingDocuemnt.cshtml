@model MissingDocumentModel

@Html.Hidden("hdnReferralDocument", Common.SerializeObject(Model))

<form id="frmMissingDocument" class="horizontal-form">
    <div class="form-group row">
        <div class="col-sm-12">
            <div class="fscontainer">
                <div class="legend">
                    @Resource.MissingExpireDocuments
                </div>
                <div>
                    <div class="space20"></div>
                    <div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label text-align-right required">@Resource.Email:</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.ToEmail, new
                                    {
                                        data_ng_model = "MissingDocumentModel.ToEmail",
                                        @class = "form-control input-sm",
                                        placeholder = "Enter Email"
                                    })
                                @Html.ValidationMessageFor(x => x.ToEmail)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label text-align-right required">@Resource.Subject:</label>
                            <div class="col-md-8">
                                @Html.TextBoxFor(x => x.Subject, new { data_ng_model = "MissingDocumentModel.Subject", @class = "form-control input-sm", placeholder = "Enter Subject",maxlength = 500 })
                                @Html.ValidationMessageFor(x => x.Subject)
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-md-3 control-label text-align-right required">@Resource.Body:</label>
                            <div class="col-md-8">
                                @Html.TextAreaFor(x => x.Body, new { ng_model = "MissingDocumentModel.Body", @class = "form-control hideErrorContent replaceErrorSource", min_height = "200", max_height = "400", rows = "20", style = "height: 350px;", id = "EmailBody" })
                                @Html.ValidationMessageFor(x => x.Body)
                                <div class="replaceErrorDest summerNoteEditor">
                                    <summernote data-ng-model="MissingDocumentModel.Body" height="400"></summernote>
                                </div>
                            </div>
                        </div>
                        <div class="form-group row ">
                            <label class="col-md-3 control-label text-align-right"></label>
                             @if (Common.HasPermission(Constants.Permission_ReferralDocuments_AddUpdate))
                             {
                                 <div class="col-md-8">
                                     <input type="submit" data-ng-click="SendEmail()" class="btn btn-sm blue" value="@Resource.SendEmail"/>
                                 </div>
                             }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row-fluid no-padding col-lg-12">
    </div>
</form>
