@model Zarephath.Core.Models.ViewModel.HC_AddEmployeeModel

@{
    ViewBag.Title = "_EmployeeNote.cshtml";
}
@Html.Hidden("hdnEmployeeModel", Common.SerializeObject(Model))



<div class="contact-details-wrap">
    <div class="form-group row">
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div class="fscontainer groupErrorParent" id="ShowAddedContactList">
                <div class="legend">
                   Email Signature
                </div>

                <div class="row" style="padding-left:35px;">
                    <div class="col-sm-12">
                        <div class="row">
                            <div class="form-group col-sm-12">

                                <div class="row">
                                    <div class="col-sm-2">
                                        <label class="control-label required">@Resource.Name</label>
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="text" id="txtFormEmailName" class="form-control requiredStrip" placeholder="@Resource.Name" ng-model="EmployeeSignature.Name" />
                                    </div>
                                </div>


                                <div class="row" style="padding-top:10px;">
                                    <div class="col-sm-2">
                                        <label class="control-label">@Resource.Description</label>
                                    </div>


                                    <div class="col-sm-8">
                                        <textarea  class="dirSummerNoteEditor form-control error_summer_note ng-pristine ng-untouched ng-valid ng-isolate-scope" ng-model="EmployeeSignature.Description"
                                                  min-height="200" name="" rows="2" cols="20"
                                             
                                                   id="txtEmailDescription"></textarea>
                                        
                                    </div>
                                </div>
                                <div class="row" style="padding-top:10px;">
                                    <div class="col-sm-3">
                                        @*<label class="control-label required">@Resource.Name</label>*@
                                    </div>
                                    <div class="col-sm-8">
                                        <input type="button" data-ng-click="SaveEmailEmployeeSignature()" class="btn btn-sm green-jungle pull-right" value="Save" />
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

            </div>
        </div>
    </div>
