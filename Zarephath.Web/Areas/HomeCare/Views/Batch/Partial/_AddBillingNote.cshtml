@model dynamic
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
    <h4 class="modal-title page-title no-margin">
        Billing Note
    </h4>
</div>

<div class="modal-body">
    <form class="form-horizontal" id="frmBillingNote">
        <div class="form-group row">
            <div class="col-sm-12">
                <div class="fscontainer">
                    @*<div class="legend">
                           Add Billing Note
                        </div>*@
                    <div class="billingNote">
                        <div class="col-md-12">
                            <div class="row">

                                <div class="col-md-12 col-sm-12">
                                    <div class="field">
                                        <label class="control-label required" style="font-size:1.5rem ">Add Billing Note</label>
                                        <div class="field-box">
                                            <textarea class="form-control input-sm "
                                                      data-ng-model="BillingNoteModel.BillingNote"
                                                      rows="10" cols="40"  
                                                      style="font-size:1.4rem !important;"
                                                      placeholder="Writer Note Here"
                                                      type="text"
                                                      name="BillingNotes"
                                                      value=""
                                                      autocomplete="autocomplete_off_hack_xfr4!k">
</textarea>
                                            @*<span class="field-validation-valid" data-valmsg-for="Employee.EmployeeUniqueID" data-valmsg-replace="true"></span>*@
                                        </div>
                                    </div>
                                </div>

                                <div class="clearfix visible-sm">
                                    <!-- clearfix sm cols every 2 -->
                                </div>


                            </div>
                        </div>

                        <div class="col-md-4">
                        </div>

                        <div class="col-md-4">
                        </div>

                        <div class="col-md-4">
                        </div>
                    </div>

                    <div class="col-sm-12 no-padding">
                    </div>

                </div>
            </div>

        </div>
    </form>
</div>
<div class="modal-footer">
    <button type="submit" data-ng-click="HideCMS1500Files()" class="btn btn-sm red-mint">@Resource.Cancel</button>
    <button type="submit" data-ng-click="SaveBillingNote()" class="btn btn-sm green-jungle">@Resource.Save</button>
</div>