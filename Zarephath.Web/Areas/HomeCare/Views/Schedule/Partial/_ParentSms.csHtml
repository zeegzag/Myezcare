@model HC_ScheduleMasterModel
<div id="sms-modal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>

                <h3 class="modal-title">@Resource.ScheduleSMS</h3>

            </div>
            <div class="modal-body">
                <form class="form-horizontal" id="parent-sms">
                    <div class="form-group row">
                        <label class="col-md-3 control-label text-align-right">@Resource.ToNumber:</label>
                        <div class="col-md-8">
                            @Html.TextBoxFor(x => x.ScheduleSmsModel.ToNumber, new { data_ng_model = "SmsModel.ToNumber", @class = "form-control input-sm", placeholder = "Enter Number" })
                            @Html.ValidationMessageFor(x => x.ScheduleSmsModel.ToNumber)
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-3 control-label text-align-right">@Resource.Body:</label>
                        <div class="col-md-8">
                            @Html.TextAreaFor(x => x.ScheduleSmsModel.Body, new { data_ng_model = "SmsModel.Body", @class = "form-control", rows = "8" })
                            @Html.ValidationMessageFor(x => x.ScheduleSmsModel.Body)
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <a class="btn btn-success bg-green-jungle" data-ng-click="SendParentSMS()">Send</a>
            </div>
        </div>

    </div>
</div>
