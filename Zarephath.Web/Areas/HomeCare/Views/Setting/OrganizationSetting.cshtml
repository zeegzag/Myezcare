@{
    ViewBag.Title = string.Format("{0} {1}", Resource.ZarePhath, Resource.OrganizationSettings);
    ViewBag.SelectedMenuItem = Resource.SMI_OrganizationSettings;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model AddOrganizationSettingModel
@Html.Hidden("SettingHiddenModel", Common.SerializeObject(Model))

<div class="row">

    <div class="col-lg-12 col-md-12 col-sm-12">
        <div class="tabs organizationTabs">
            <div class="tabbable tabbable-custom tabs-left">

                <div class="col-lg-2 col-md-2 col-sm-2 no-padding">
                    <ul class="nav nav-tabs tabs-left no-padding">
                        <li class="active">
                            <a data-toggle="tab" id="org_Settings" data-target="#tab_orgSettings" href="#orgSettings">@Html.Raw(Resource.OrganizationSettings)</a>
                        </li>
                        <li>
                            <a data-toggle="tab" id="org_formLibrary" data-target="#tab_formLibrary" href="#formLibrary" >@Html.Raw(Resource.FormsLibrary)</a>
                        </li>

                    </ul>
                </div>

                <div class="tab-content col-lg-10 col-md-10 col-sm-10">
                    <div class="tab-content">
                        <div id="tab_orgSettings" class="tab-pane fade in active"  style="min-height: 350px;" data-ng-controller="SystemSettingController">
                            @Html.Partial("Partial/_OrganizationSetting", Model)
                        </div>

                        <div id="tab_formLibrary" class="tab-pane fade"  style="min-height: 350px;">
                            @Html.Action("partialorganizationforms", "form")
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>







<script>
    var loadFile = function (event, imageId) {
        var output = document.getElementById(imageId);
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>

@section Scripts{
    @Scripts.Render("~/assets/js/viewjs/siteApp/Areas/HomeCare/setting/organizationsetting")
    @Scripts.Render("~/assets/js/viewjs/siteapp/areas/homecare/form/organizationform")
    <script type="text/javascript">
        var InvalidImageUploadMessage = '@Html.Raw(HttpUtility.JavaScriptStringEncode(@Resource.InvalidImageUploadMessage))';
        var EnableDisableConfirmationMessage = '@string.Format(Resource.EnableDisableConfirmationMessage, Resource.GeneralMaster)';
        var MaximumUploadImageSizeMessage = '@Html.Raw(HttpUtility.JavaScriptStringEncode(@Resource.MaximumUploadFileSizeMessage5MB))';
        var MaxImageUploadSizeInBytes = '@Resource.MaxImageUploadSizeInBytes';
    </script>
}


