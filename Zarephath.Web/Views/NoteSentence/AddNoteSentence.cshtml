@{
    ViewBag.Title = string.Format("{0} {1}", Resource.ZarePhath, (Model.NoteSentenceID > 0 ? Resource.EditNoteSentence : Resource.AddNoteSentence));
    // Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = ViewBag.IsPartialView == null ? "~/Views/Shared/_Layout.cshtml" : "~/Views/Shared/_EmptyLayout.cshtml";
    ViewBag.SelectedMenuItem = Resource.SMI_NoteSentenceAdd;
}

@model NoteSentence

@if (Model != null)
{
    @Html.Hidden("hdnNoteSentenceModel", Common.SerializeObject(Model))
    <div data-ng-controller="AddNoteSentenceController">
        <form class="form-horizontal" id="frmNoteSentence">
            <div class="page-bar">
                <h3 class="page-title">
                    @(Model.NoteSentenceID > 0 ? Resource.EditNoteSentence : Resource.AddNoteSentence)
                    <small>@Resource.EnterNoteSentenceInformation</small>
                    @*<input type="submit" data-ng-click="Save()" class="btn btn-sm green-jungle pull-right" value="@(Model.NoteSentenceID > 0 ? Resource.Update : Resource.Save)" />
                    <input type="button" data-ng-click="Cancel()" class="btn btn-sm red-mint pull-right margin-right-10" value="@Resource.Cancel" />*@
                </h3>
            </div>

            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group row">
                        <div class="col-sm-12">
                            <div class="fscontainer">
                                <div class="legend">
                                    @Resource.NoteSentence
                                </div>

                                <div class="col-sm-push-2 col-sm-7 no-padding">
                                    <div class="col-sm-12">

                                        <div class="form-group col-sm-12">
                                            <label class="col-md-4 control-label required">@Resource.NoteSentenceTitle</label>
                                            <div class="col-md-8 col-sm-12">
                                                @Html.TextBoxFor(q => q.NoteSentenceTitle, new
                                                {
                                                    @class = "form-control input-sm",
                                                    data_ng_model = "NoteSentenceModel.NoteSentenceTitle",
                                                    placeholder = Resource.NoteSentenceTitle,
                                                    maxlength = 100
                                                })
                                                @Html.ValidationMessageFor(q => q.NoteSentenceTitle)
                                            </div>
                                        </div>

                                        <div class="form-group col-sm-12">
                                            <label class="col-md-4 control-label required">@Resource.NoteSentenceDetails</label>
                                            <div class="col-md-8 col-sm-12">
                                                @Html.TextAreaFor(q => q.NoteSentenceDetails, new
                                                {
                                                    @class = "form-control input-sm requiredStrip",
                                                    data_ng_model = "NoteSentenceModel.NoteSentenceDetails",
                                                    placeholder = Resource.NoteSentenceDetails,
                                                    rows = 14
                                                })
                                                @Html.ValidationMessageFor(q => q.NoteSentenceDetails)
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                    <div class="col-md-12 form-group btn-center">
                        <input type="submit" data-ng-click="Save()" class="btn btn-sm green-jungle" value="@(Model.NoteSentenceID > 0 ? Resource.Update : Resource.Save)" />
                        <input type="button"   data-ng-click="Cancel()" class="btn btn-sm red-mint" value="@Resource.Cancel" />
                    </div>

                </div>
            </div>





        </form>
    </div>
}

@section Scripts{
    @Scripts.Render("~/assets/js/viewjs/siteApp/notesentence/addnotesentence")
}
