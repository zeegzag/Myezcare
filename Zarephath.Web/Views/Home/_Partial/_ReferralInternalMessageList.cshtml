<div id="ReferralInternalMessageList" class="row" data-ng-show="ReferralInternalMessageList.length > 0">
    <div class="col-md-12">
        <div class="portlet box blue">

            <div class="portlet-title">
                <div class="caption header-font-size-14 uppercase">
                    @Resource.AssigneInternalMessageNotification
                    <div class="pull-right padding-left-25" data-ng-show="ReferralInternalMessageAjaxStart">
                        <img src="~/Assets/images/lazyload.gif" />
                    </div>
                </div>
                <div class="tools">
                    @*<a href="javascript:;" class="collapse"></a>*@
                    <a href="javascript:;" class="collapse"></a>
                    <a href="javascript:;" class="fullscreen"></a>
                </div>
            </div>

            <div class="portlet-body table_font-size-12">
                <div class="row">
                    <div class="col-sm-12 form-group  padding-right-15" data-ng-if="ReferralInternalMessageList.length > 0">
                        <div class="pull-right padding-right-5">
                            <dir-pagination-controls boundary-links="true" on-page-change="ReferralInternalMessageListPager.pageChanged(newPageNumber)" pagination-id="ReferralResolvedInternalMessageList"></dir-pagination-controls>
                        </div>
                    </div>
                </div>
                @*<div class="table-responsive">*@
                <div class="row">
                    <div class="col-sm-12">
                        <div class="portlet-body" style="display: block;">
                            <div class="table-responsive">
                                <form id="frmReferralinterMessageList">
                                    <table class="table table-bordered table-striped table-condensed flip-content">
                                        <thead>
                                            <tr>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('AHCCCSID')">@Resource.AHCCCSID</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'AHCCCSID'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('CISNumber')">@Resource.CISLabel</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'CISNumber'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('ClientName')">@Resource.ClientLabel</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'ClientName'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('Gender')">@Resource.Sex</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'Gender'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('Age')">@Resource.Age</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'Age'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th class="col-sm-4">
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('Note')">@Resource.Message</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'Note'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('Status')">@Resource.Status</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'Status'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('CreatedByName')">@Resource.AddedBy</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'CreatedByName'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                <th>
                                                    <a class="anchor_color" href="javascript:void(0);" data-ng-click="ReferralInternalMessageListPager.sortColumn('CreatedDate')">@Resource.AddedDate</a>
                                                    <span class="sortorder" data-ng-show="ReferralInternalMessageListPager.sortIndex === 'CreatedDate'" data-ng-class="{reverse:ReferralInternalMessageListPager.reverse}"></span>
                                                </th>
                                                @if (Common.HasPermission(Constants.Permission_ReferralInternalMessaging_View_AddUpdate))
                                                {
                                                    <th class="col-sm-2"></th>
                                                }
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr dir-paginate="item in ReferralInternalMessageList | itemsPerPage: ReferralInternalMessageListPager.pageSize" total-items="ReferralInternalMessageListPager.totalRecords" current-page="ReferralInternalMessageListPager.currentPage" pagination-id="ReferralResolvedInternalMessageList">

                                                <td>
                                                    <span data-ng-bind="item.AHCCCSID"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind="item.CISNumber? item.CISNumber:'@Resource.NA'"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind="item.LastName +', '+ item.FirstName"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind="item.Gender"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind="item.Age"></span>
                                                </td>
                                                <td>
                                                    <span data-ng-bind-html="item.Note? item.Note:'@Resource.NA'"></span>
                                                </td>
                                                <td data-ng-bind="item.IsResolved == true ? 'Resolved' : 'Open'"></td>
                                                <td><span data-ng-bind="item.CreatedByName"></span></td>
                                                <td>
                                                    <span data-ng-bind="item.CreatedDate | date:'@Resource._DateFormat'"></span>
                                                </td>
                                                @if (Common.HasPermission(Constants.Permission_ReferralInternalMessaging_View_AddUpdate))
                                                {
                                                    <td>
                                                        <div>
                                                            <span data-ng-if="!item.IsResolved">
                                                                <a class="btn btn-xs yellow" data-ng-click="ResolveNote(item.EncryptedReferralInternalMessageId,item.ReferralID)" href="javascript:void(0);">@Resource.Resolve</a>
                                                            </span>
                                                            <a href="#" target="_blank" data-ng-attr-href="{{ ReferralURL + item.EncryptedReferralID +'/#internalMessage'}}" class="btn btn-xs blue">@Resource.AccessClient</a>
                                                        </div>
                                                    </td>
                                                }
                                            </tr>
                                        </tbody>
                                    </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                @*</div>*@
                <div class="row">
                    <div class="col-sm-12" data-ng-if="ReferralInternalMessageList.length > 0">
                        <div class="col-sm-6 pull-left no-left-padding"
                            data-ng-hide="ReferralInternalMessageListPager.currentPage==1 && (ReferralInternalMessageListPager.currentPageSize < ReferralInternalMessageListPager.pageSize)">
                            @Resource.Showing <span data-ng-bind="(ReferralInternalMessageListPager.pageSize * ReferralInternalMessageListPager.currentPage) -ReferralInternalMessageListPager.pageSize  + 1"></span>
                            &nbsp;@Resource.To <span data-ng-bind="(ReferralInternalMessageListPager.pageSize == ReferralInternalMessageListPager.currentPageSize) ? (ReferralInternalMessageListPager.pageSize * ReferralInternalMessageListPager.currentPage) :(ReferralInternalMessageListPager.pageSize * ReferralInternalMessageListPager.currentPage) - ReferralInternalMessageListPager.pageSize  + ReferralInternalMessageListPager.currentPageSize"></span>&nbsp;@Resource.Of &nbsp;<span data-ng-bind="ReferralInternalMessageListPager.totalRecords"></span>&nbsp;@Resource.Records
                        </div>
                        <div class="pull-right">
                            <dir-pagination-controls boundary-links="true" on-page-change="ReferralInternalMessageListPager.pageChanged(newPageNumber)" pagination-id="ReferralResolvedInternalMessageList"></dir-pagination-controls>
                        </div>
                    </div>
                </div>
                <br class="clearfix" />
            </div>
        </div>
    </div>

</div>
