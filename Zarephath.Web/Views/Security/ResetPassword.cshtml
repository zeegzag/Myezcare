@{
    ViewBag.Title = string.Format("{0} {1}", Resource.ZarePhath, Resource.ResetPassword);
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

@model ResetPasswordModel

@Html.Hidden("hdnResetPasswordModel", Common.SerializeObject(Model))

<div data-ng-controller="ResetPasswordController">
    <form role="form" id="frmResetPassword">
        <h3 class="form-title font-green">@Resource.ResetPassword</h3> 
        <p></p>

        <div class="form-group">
            @Html.PasswordFor(q => q.Password, new { data_ng_model = "ResetPasswordModel.Password", @class = "form-control", maxlength = 20, placeholder = @Resource.EnterPassword })
            @Html.ValidationMessageFor(q => q.Password)
        </div>

        <div class="form-group">
            @Html.PasswordFor(q => q.ConfirmPassword, new { data_ng_model = "ResetPasswordModel.ConfirmPassword", @class = "form-control", maxlength = 20, placeholder = @Resource.EnterConfirmPassword })
            @Html.ValidationMessageFor(q => q.ConfirmPassword)
        </div>

        <div class="form-actions">
            <a href="@Constants.ForgotPasswordURL" class="btn btn-danger">@Resource.Back</a>
            <button type="submit" data-ng-click="Save()" class="btn uppercase pull-right btn-cstm">@Resource.Submit</button>
        </div>
    </form>
</div>


@section Scripts{
    @Scripts.Render("~/assets/js/viewjs/loginapp/security/resetpassword")
}