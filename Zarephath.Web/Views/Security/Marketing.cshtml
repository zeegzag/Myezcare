@{
    ViewBag.Title = "Marketing";
    Layout = null;
}

<!DOCTYPE html>
<meta charset="utf-8">
<meta content="IE=edge" http-equiv="X-UA-Compatible">
<meta content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1" name="viewport">
<link rel="icon" type="image/png" href="favicon.png" />
<link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">
<title>MyEzcare EVV</title>
<style>
    .home_logo, .home_wrapper, .page_title, .site_title {
        text-align: center;
    }

    body {
        font-family: 'Roboto Slab',serif;
        margin: 0;
        position: absolute;
        width: 100%;
        height: 100%;
        background-color: #00b3b9;
        background-size: cover;
        background-attachment: fixed;
        display: table;
    }

    .home_wrapper {
        max-width: 800px;
        display: table-cell;
        margin: 0 auto;
        padding: 15px;
        vertical-align: middle;
        color: #fff;
    }

        .home_wrapper a {
            font-weight: 300;
            display: inline-block;
        }

            .home_wrapper a, .home_wrapper a:focus, .home_wrapper a:hover {
                color: #fff;
                text-decoration: none;
            }

    .home_logo {
        width: auto;
        margin: 0 auto 30px;
        display: table;
    }

        .home_logo img {
            max-width: 75px;
        }

    h1 {
        font-size: 28px;
    }

    .site_title {
        font-size: 16px;
        margin-top: 10px;
        display: inline-block;
        padding: 10px 15px;
        text-decoration: none;
    }

        .site_title span {
            text-decoration: underline;
        }

    .app_icon {
        display: inline-block;
        width: 100%;
    }

        .app_icon img {
            max-width: 180px;
            margin: 0 5px 5px;
        }

        .app_icon a {
            text-decoration: none;
        }

    .company_name {
        display: table-cell;
        vertical-align: middle;
        padding-left: 15px;
    }

    html, body {
        width: 100%;
        height: 100%;
        padding: 0;
        margin: 0;
        position: relative;
    }

    .popup h2 {
        font-size: 34px;
        text-align: center;
        color: #666;
        margin: 0 0 30px 0;
    }

    .popup p {
        color: #666;
        font-size: 14px;
        margin: 0 auto 30px;
        text-align: center;
    }

    .popup button {
        background: #89BDD3;
        border: 0;
        border-radius: 4px;
        padding: 7px 15px;
        font-size: 16px;
        color: #FFF;
        cursor: pointer;
    }

        .popup button:focus {
            outline: none;
        }

        .popup button:hover {
            background: #aed2e1;
        }

    .popup {
        background: rgba(100,100,100,0.6);
        position: fixed;
        display: none;
        z-index: 5000;
        height: 100%;
        width: 100%;
        left: 0;
        top: 0;
    }

        .popup > div {
            border-radius: 10px;
            position: fixed;
            background: #FFF;
            box-shadow: 0px 0px 15px 0px rgba(0, 0, 0, 0.3);
            padding: 30px 15px;
            width: 70%;
            max-width: 600px;
            z-index: 5001;
            -moz-transform: translate(-50%, -50%);
            -ms-transform: translate(-50%, -50%);
            -webkit-transform: translate(-50%, -50%);
            transform: translate(-50%, -50%);
            left: 50%;
            top: 50%;
            text-align: center;
            border: 5px solid #9AD3DE;
        }

    .form-group {
        border: 1px solid #aed2e1;
        border-radius: 4px;
        margin-bottom: 20px;
        max-width: 250px;
        padding: 10px;
        width: 89%;
        color: #666;
    }

    .bootstrap-common-h3 {
        font-size: 22px;
        font-weight: 500;
        line-height: 26.4px;
        margin-bottom: 10px;
    }

    .bootstrap-common-company_name {
        font-weight: 500;
    }

    .call_icon img, .whastapp_icon img {
        width: 40px;
    }

    .call_icon {
        position: fixed;
        bottom: 10px;
        right: 15px;
        z-index: 1;
    }

    .whastapp_icon {
        position: fixed;
        bottom: 10px;
        left: 15px;
        z-index: 1;
    }
</style>
<div class="home_wrapper">
    <h1 class="home_logo">
        <img src="~/Assets/images/marketing_logo.png" alt="img">
        <span class="company_name bootstrap-common-company_name">MyEzcare EVV</span></h1>
    <h3 style="margin-bottom: 10px;" class="bootstrap-common-h3">Download Our App Android & iOS App</h3>
    <h2 class="page_title" style="margin-top: 0px;">
        <span style="font-size: 16px; position: relative; top: -8px; font-weight: 500;">Login / Register to Get</span>
        <br />
        <span style="font-size: 22px; text-transform: capitalize; letter-spacing: 1px; font-weight: 500; word-spacing: 5px;">A complete end to end solution for In-Home care and Respite Care providers.
        </span>
        <br />
    </h2>
    <span class="app_icon"><a href="https://play.google.com/store/apps/details?id=com.myeasycareinhome" data-js="open">
        <img src="~/Assets/images/android-app-icon.png" alt="img"></a>
        <a href="https://itunes.apple.com/app/id1361482557?mt=8">
            <img src="~/Assets/images/ios_app_icon.png">
        </a></span><a href="https://myezcare.com" class="site_title">To know more visit
            <br>
            <span>https://myezcare.com</span> </a>
    <div style="display: table; margin: 5px auto 0px; font-weight: normal; width: 290px; position: relative">

        <a href="tel:+185558889273" style="display: table; margin: 5px auto 0px; font-weight: normal;"><i class="fa fa-phone"></i>&nbsp; +1 (855) 888-9273</a>



        <a href="tel:+185558889273" class="call_icon">
            <img src="~/Assets/images/phone.png" alt="Call" /></a>
    </div>
</div>
